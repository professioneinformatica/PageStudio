@page "/document-renderer"
@using SkiaSharp.Views.Blazor
@using Microsoft.FluentUI.AspNetCore.Components
@using PageStudio.Core.Services
@using PageStudio.Web.Client.Components

<PageTitle>Document Renderer</PageTitle>
<span>@this.AssignedRenderMode</span>
<h1>Document Renderer</h1>

<div class="row">
    <div class="col-md-3">
        <div class="card">
            <div class="card-header">
                <h5>Document Controls</h5>
            </div>
            <div class="card-body">
                <div class="mb-3">
                    <label for="documentName" class="form-label">Document Name</label>
                    <input type="text" class="form-control" id="documentName" @bind="_documentName"
                           placeholder="Enter document name">
                </div>

                <div class="mb-3">
                    <button class="btn btn-primary" @onclick="CreateNewDocument">Create New Document</button>
                </div>

                @if (_canvasInteractor.CurrentDocument != null)
                {
                    <div class="mb-3">
                        <h6>Current Document: @_canvasInteractor.CurrentDocument.Name</h6>
                        <p><small class="text-muted">Pages: @_canvasInteractor.CurrentDocument.Pages.Count()</small></p>
                        <p><small class="text-muted">Created: @_canvasInteractor.CurrentDocument.CreatedAt.ToString("yyyy-MM-dd HH:mm")</small>
                        </p>
                        <p><small class="text-muted">Modified: @_canvasInteractor.CurrentDocument.ModifiedAt.ToString("yyyy-MM-dd HH:mm")</small>
                        </p>
                        <p><small class="text-muted">Pan Offset: X = @_canvasInteractor.PanOffsetX.ToString("F0"), Y = @_canvasInteractor.PanOffsetY.ToString("F0")</small></p>
                    </div>

                    <div class="mb-3">
                        <button class="btn btn-outline-secondary" @onclick="ShowDocumentProperties">
                            <i class="bi bi-gear"></i> Document Properties
                        </button>
                    </div>

                    <DocumentPropertiesPanel 
                        IsVisible="@_showDocumentProperties" 
                        Document="@_canvasInteractor.CurrentDocument" 
                        OnClose="@CloseDocumentProperties" />

                    @if (_canvasInteractor.CurrentDocument != null)
                    {
                        <div class="mb-3">
                            <button class="btn btn-success" @onclick="ShowAddPagesModal">
                                <i class="bi bi-plus-circle"></i> Add Pages
                            </button>
                        </div>
                    }
                }

                <div class="mb-3">
                    <h6>Struttura documento</h6>

                    
                    <FluentTreeView Items="@_documentTree" SelectedItem="@_selectedTreeNode" SelectedItemChanged="OnTreeNodeSelected">
                        
                        <ItemTemplate Context="node">
                            <span>@node.Text</span>
                        </ItemTemplate>
                    </FluentTreeView>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-9">
        @if (_canvasInteractor.CurrentDocument != null && _isRendered)
        {
            <!-- Document Toolbar -->
            <div class="card mb-3">
                <div class="card-body py-2">
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="d-flex align-items-center gap-3">
                            <!-- Zoom Controls -->
                            <div class="d-flex align-items-center gap-2">
                                <span class="text-muted small">Zoom:</span>
                                <div class="btn-group btn-group-sm" role="group">
                                    <button class="btn btn-outline-secondary" @onclick="@_canvasInteractor.ZoomManager.ZoomOut" title="Zoom Out">
                                        <i class="bi bi-zoom-out"></i>
                                    </button>
                                    <button class="btn btn-outline-secondary disabled" disabled>
                                        @((_canvasInteractor.ZoomManager.Level * 100).ToString("F0"))%
                                    </button>
                                    <button class="btn btn-outline-secondary" @onclick="@_canvasInteractor.ZoomManager.ZoomIn" title="Zoom In">
                                        <i class="bi bi-zoom-in"></i>
                                    </button>
                                </div>
                            </div>

                            <!-- Layout Mode Controls -->
                            <div class="d-flex align-items-center gap-2">
                                <span class="text-muted small">Layout:</span>
                                <div class="btn-group btn-group-sm" role="group">
                                    <button
                                        class="btn @(_canvasInteractor.CurrentLayoutMode == LayoutMode.Vertical ? "btn-primary" : "btn-outline-primary") btn-sm"
                                        @onclick="SetVerticalLayout" title="Vertical Layout">
                                        <i class="bi bi-arrow-down"></i> Vertical
                                    </button>
                                    <button
                                        class="btn @(_canvasInteractor.CurrentLayoutMode == LayoutMode.SideBySide ? "btn-primary" : "btn-outline-primary") btn-sm"
                                        @onclick="SetSideBySideLayout" title="Side by Side Layout">
                                        <i class="bi bi-arrow-left-right"></i> Side by Side
                                    </button>
                                </div>
                            </div>

                            <!-- Interaction Mode Controls -->
                            <div class="d-flex align-items-center gap-2">
                                <span class="text-muted small">Modalit√†:</span>
                                <div class="btn-group btn-group-sm" role="group">
                                    <button class="btn @(this._canvasInteractor.ActiveTool == CanvasDocumentInteractor.InteractionMode.Selection ? "btn-primary" : "btn-outline-primary") btn-sm"
                                            @onclick="SetSelectionMode" title="Seleziona oggetti">
                                        <i class="bi bi-cursor"></i>
                                    </button>
                                    <button class="btn @(this._canvasInteractor.ActiveTool == CanvasDocumentInteractor.InteractionMode.Pan ? "btn-primary" : "btn-outline-primary") btn-sm"
                                            @onclick="SetPanMode" title="Pan (trascina canvas)">
                                        <i class="bi bi-arrows-move"></i>
                                    </button>
                                </div>
                            </div>

                            <!-- Text Tool Controls -->
                            <div class="d-flex align-items-center gap-2">
                                <span class="text-muted small">Tools:</span>
                                <button class="btn btn-outline-success btn-sm" @onclick="ShowAddTextModal" title="Add Text">
                                    <i class="bi bi-type"></i> Add Text
                                </button>
                                <button class="btn btn-outline-success btn-sm" id="add-image-button" title="Add Image">
                                    <i class="bi bi-image"></i> Add Image
                                </button>
                                <FluentInputFile DragDropZoneVisible="false" Multiple="false" Accept="image/*" 
                                                 AnchorId="add-image-button" Mode="InputFileMode.Stream" OnFileUploaded="OnFluentImageSelected">
                                </FluentInputFile>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }

        <div class="card">
            <div class="card-header">
                <h5>Document Preview</h5>
            </div>
            <div class="card-body">
                @if (_canvasInteractor.CurrentDocument != null && _isRendered)
                {
                    <SKCanvasView @ref="_canvasView" IgnorePixelScaling="true"
                                  OnPaintSurface="OnPaintSurface"
                                  @onpointerdown="@OnPointerDown"
                                  @onpointermove="@OnPointerMove"
                                  @onpointerup="@OnPointerUp"
                                  @onpointerleave="@OnPointerLeave"
                                  @onwheel="@OnWheel"
                                  @onpointercancel="@OnPointerUp"
                                  @onpointerout="@OnPointerLeave"
                                  style="@CanvasStyleAttribute" />
                    <div class="status-bar mt-2 p-2 bg-light border rounded text-end small">
                        <span>X: @_mouseX.ToString("F0")&nbsp;&nbsp;Y: @_mouseY.ToString("F0")</span>
                        <span class="mx-3">|</span>
                        <span>
                            <strong>Pagina selezionata:</strong> @(_canvasInteractor.SelectedPage != null ? _canvasInteractor.SelectedPage.Name : "-")
                        </span>
                        <span class="mx-3">|</span>
                        <span>
                            <strong>Posizione su pagina:</strong>
                            @( _hoveredPage != null && _mousePageX.HasValue && _mousePageY.HasValue
                                ? $"X: {_mousePageX.Value:F0} Y: {_mousePageY.Value:F0} (pagina: {_hoveredPage.Name})"
                                : "-" )
                        </span>
                    </div>
                }
                else if (_canvasInteractor.CurrentDocument != null)
                {
                    <div class="alert alert-info">
                        Document ready. Click "Render Document" to display the preview.
                    </div>
                }
                else
                {
                    <div class="alert alert-warning">
                        No document loaded. Create a new document to start.
                    </div>
                }
            </div>
        </div>
    </div>
</div> <!-- Fine row principale -->

@if (_canvasInteractor.SelectedElement != null)
{
    <ElementPropertiesPanel SelectedElement="@_canvasInteractor.SelectedElement" OnPropertyChanged="@OnPropertyChanged" />
}

<!-- Add Pages Modal -->
<AddPagesModal IsVisible="@_showAddPagesModal"
               Model="@_addPageModel"
               AddPagesRequested="@AddSamplePage"
               CloseRequested="@CloseAddPagesModal"/>

<!-- Add Text Modal -->
<AddTextModal IsVisible="@_showAddTextModal"
              TextContent="@_newTextContent"
              FontFamily="@_newTextFontFamily"
              FontSize="@_newTextFontSize"
              AddTextRequested="@OnAddTextRequested"
              CloseRequested="@CloseAddTextModal" />
