@using PageStudio.Core.Models.ContainerPageElements
@using PageStudio.Web.Client.Components.DynamicPropertyEditor

@if (SelectedElement is null)
{
    <div>Loading...</div>
}
else
{
    <div class="card properties-panel">
        <div class="card-header">
            <h5 class="mb-0">Element Properties</h5>
        </div>
        <div class="card-header bg-transparent border-bottom-0">
            <ul class="nav nav-tabs card-header-tabs">
                <li class="nav-item">
                    <button class="@GetTabClass("general")" @onclick='() => SetActiveTab("general")'>General</button>
                </li>
                <li class="nav-item">
                    <button class="@GetTabClass("appearance")" @onclick='() => SetActiveTab("appearance")'>Appearance</button>
                </li>
            </ul>
        </div>
        <div class="card-body properties-body tab-content">
            <div class="@GetPaneClass("general")" id="general">
                <div class="mb-3">
                    <p><strong>Name:</strong> @SelectedElement.Name</p>
                    <p><strong>Type:</strong> @SelectedElement.GetType().Name</p>
                </div>
                <div class="mb-3">
                    <h6>Position & Size</h6>
                    <div class="row">
                        <div class="col-6">
                            <label class="form-label">X:</label>
                            <DynamicPropertyEditor @bind-Property="SelectedElement.X" @bind-Property:after="() => OnPropertyChanged.InvokeAsync()" />
                        </div>
                        <div class="col-6">
                            <label class="form-label">Y:</label>
                            <DynamicPropertyEditor @bind-Property="SelectedElement.Y" @bind-Property:after="() => OnPropertyChanged.InvokeAsync()" />
                        </div>
                    </div>
                    <div class="row mt-2 align-items-end">
                        <div class="col-6">
                            <label class="form-label">Width:</label>
                            <DynamicPropertyEditor @bind-Property="SelectedElement.Width" @bind-Property:after="() => OnPropertyChanged.InvokeAsync()" />
                        </div>
                        <div class="col-6">
                            <label class="form-label">Height:</label>
                            <DynamicPropertyEditor @bind-Property="SelectedElement.Height" @bind-Property:after="() => OnPropertyChanged.InvokeAsync()" />
                        </div>
                    </div>
                    <div class="mt-2 d-flex align-items-center gap-2">
                        <button class="btn btn-outline-secondary btn-sm" @onclick="ToggleAspectRatioLock"
                                title="Blocca proporzioni">
                            @if (SelectedElement?.LockAspectRatio == true)
                            {
                                <i class="bi bi-lock-fill" title="Blocca proporzioni"></i>
                            }
                            else
                            {
                                <i class="bi bi-unlock" title="Sblocca proporzioni"> </i>
                            }
                        </button>
                        <span class="text-muted small">Rapporto: @SelectedElement?.AspectRatio.ToString("0.00")</span>
                    </div>
                </div>

                @if (SelectedElement is TextElement textElement)
                {
                    <div class="mb-3">
                        <h6>Text Properties</h6>
                        <div class="mb-2">
                            <label class="form-label">Text:</label>
                            <textarea class="form-control" rows="3"
                                      @bind="textElement.Text" @bind:after="OnPropertyChanged.InvokeAsync"></textarea>
                        </div>
                        <div class="row">
                            <div class="col-6">
                                <label class="form-label">Font Family:</label>
                                <input type="text" class="form-control form-control-sm"
                                       @bind="textElement.FontFamily" @bind:after="OnPropertyChanged.InvokeAsync"/>
                            </div>
                            <div class="col-6">
                                <label class="form-label">Font Size:</label>
                                <input type="number" class="form-control form-control-sm"
                                       @bind="textElement.FontSize" @bind:after="OnPropertyChanged.InvokeAsync"/>
                            </div>
                        </div>
                    </div>
                }
            </div>

            <div class="@GetPaneClass("appearance")" id="appearance">
                <div class="mb-3">
                    <h6>Appearance</h6>
                    <div class="row">
                        <div class="col-6">
                            <label class="form-label">Opacity:</label>
                            @if (SelectedElement is not null)
                            {
                                <DynamicPropertyEditor @bind-Property="SelectedElement.Opacity" @bind-Property:after="() => OnPropertyChanged.InvokeAsync()" />
                            }
                        </div>
                        <div class="col-6">
                            <label class="form-label">Rotation:</label>
                            @if (SelectedElement is not null)
                            {
                                <DynamicPropertyEditor @bind-Property="SelectedElement.Rotation" @bind-Property:after="() => OnPropertyChanged.InvokeAsync()" />
                            }
                        </div>
                    </div>
                </div>
                <div class="mb-3">
                    <h6>Visibility & Status</h6>
                    <div class="form-check d-flex align-items-center gap-2">
                        @if (SelectedElement is not null)
                        {
                            <DynamicPropertyEditor @bind-Property="SelectedElement.IsVisible" @bind-Property:after="() => OnPropertyChanged.InvokeAsync()" />
                        }
                        <label class="form-check-label">Visible</label>
                    </div>
                    <div class="form-check d-flex align-items-center gap-2">
                        @if (SelectedElement is not null)
                        {
                            <DynamicPropertyEditor @bind-Property="SelectedElement.IsLocked" @bind-Property:after="() => OnPropertyChanged.InvokeAsync()" />
                        }
                        <label class="form-check-label">Locked</label>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

